{% extends "MainBundle::base.html.twig" %}

{% block content %}
    <br>
    <br>
    <br>
    <div class="panel panel-primary">
        <div class="panel-heading">
            Szegóły użytkownika
            <a href="{{path('view')}}">Powrót</a>
        </div>
        <div class="panel-body">
           <table class="table table-hover table-bordered table-striped">           
                {% for entry in rows %}
                <tr>
                <th>Imie</th>    
                <td>{{ entry.name }}</td>
                </tr>
                <tr>
                    <th>Nazwisko</th>
                     <td>{{ entry.forename }}</td>
                </tr>
                <tr>
                    <th>Województwo</th>
                    <td>{{ entry.woj }}</td>    
                </tr>
                <tr>
                    <th>Płeć</th>
                    <td>{{ entry.sex }}</td>
                </tr>
                <tr>
                    <th>Kategoria</th>
                    <td>{{ entry.kategoria }}</td>
                </tr>
                
               {% else %}
               <td colspan="4">Brak danych</td>
               </tr>
               {% endfor %}
            
        </tbody>
    </table> 
        </div>
        
    </div>
            
{% endblock %}

